<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quick E-Transfer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            text-align: center;
        }
        .amount-input {
            font-size: 24px;
            padding: 10px;
            width: 200px;
            margin: 20px 0;
        }
        .button {
            background-color: #4CAF50;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 10px;
        }
        .button:hover {
            background-color: #45a049;
        }
        .copied {
            color: green;
            display: none;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Quick E-Transfer</h1>
    <p>Enter amount and initiate e-transfer to: <br><strong>shaun@jsbg.ca</strong></p>
    
    <input type="number" class="amount-input" id="amount" placeholder="Amount ($)" min="0" step="0.01">
    
    <div>
        <button class="button" onclick="copyEmail()">Copy Email</button>
        <button class="button" onclick="startTransfer()">Start E-Transfer</button>
    </div>
    
    <div id="copied" class="copied">Email copied to clipboard!</div>

    <script>
        function copyEmail() {
            navigator.clipboard.writeText('shaun@jsbg.ca').then(() => {
                const copiedText = document.getElementById('copied');
                copiedText.style.display = 'block';
                setTimeout(() => {
                    copiedText.style.display = 'none';
                }, 2000);
            });
        }

        function startTransfer() {
            const amount = document.getElementById('amount').value;
            if (!amount) {
                alert('Please enter an amount');
                return;
            }
            
            // Copy email to clipboard
            navigator.clipboard.writeText('shaun@jsbg.ca');
            
            // Create payment URI
            const paymentUri = `interac-e-transfer:recipient?email=shaun@jsbg.ca&amount=${amount}`;
            
            // Try to open payment URI
            window.location.href = paymentUri;
            
            // Fallback for desktop
            setTimeout(() => {
                if (window.innerWidth > 768) {
                    alert('Please open this page on your mobile device to initiate the e-transfer directly.\n\nThe email has been copied to your clipboard.');
                }
            }, 500);
        }

        // Auto copy email on page load
        window.addEventListener('load', copyEmail);
    </script>
</body>
</html>
