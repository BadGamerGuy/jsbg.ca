    <h1>Send a Payment via e-Transfer</h1>
    <p>Tap the button below to open this payment directly in your banking app.</p>

    <!-- The key is to use a link (<a>) with the href, not just JS. Users expect to click links. -->
    <a class="button" href="interac-e-transfer://send?email=shaun@jsbg.ca" id="appLink">Open in Banking App</a>

    <div class="manual-fallback">
        <h2>Didn't work?</h2>
        <p>No problem! Please <strong>open your mobile banking app manually</strong> and send an Interac e-Transfer to:</p>
        <p><strong><a href="mailto:shaun@jsbg.ca">shaun@jsbg.ca</a></strong></p>
        <p><em>Auto-deposit is enabled. No security question is needed.</em></p>
    </div>

    <script>
        // Optional: Let's try to help the user out a little more.
        const appLink = document.getElementById('appLink');

        // Check if the page was loaded via an NFC tap (likely a phone)
        // This is a basic check, not perfect.
        if( /Android|iPhone|iPad|iPod/i.test(navigator.userAgent) ) {
            // It's a mobile device. We can be a bit more aggressive.
            console.log("Mobile device detected.");

            // Try to open the app after a very short delay, but don't rely on it.
            // The main action is still the user clicking the button.
            setTimeout(function() {
                window.location.href = "interac-e-transfer://send?email=YOUR_EMAIL@JSBG.CA";
            }, 300);
        }
        // If it's a desktop computer, the button will be the only option, which is fine.
    </script>

