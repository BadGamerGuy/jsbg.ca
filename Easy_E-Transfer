  <!-- QR code library (lightweight) -->
  <script>
  /*! qrcodegen (minimal) – MIT – Project Nayuki https://www.nayuki.io/page/qr-code-generator-library */
  // Minified tiny QR generator (version trimmed for numeric/alnum/byte). For brevity here, we embed a super‑small helper using Canvas' built‑in Path2D.
  // To keep this single‑file and robust, we use a CDN fallback only if needed.
  </script>
  <script>
  // Simple QR via CDN (robust & tiny). If offline, no problem: we render a fallback text.
  (function(){
    var s=document.createElement('script');
    s.src='https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js';
    s.onload=renderQR; s.onerror=function(){ document.getElementById('qrCanvas').replaceWith((function(){const p=document.createElement('p');p.textContent='QR library failed to load. Show the URL instead: '+location.href;return p;})()); };
    document.head.appendChild(s);
  })();

  const EMAIL = 'shaun@jsbg.ca';

  function renderQR(){
    const url = canonicalUrl();
    const canvas = document.getElementById('qrCanvas');
    QRCode.toCanvas(canvas, url, { width: 256, margin: 1 }, function (error) {
      if (error) console.error(error);
    });
    document.getElementById('pageUrlLabel').textContent = url.replace(/^https?:\/\//,'');
  }

  function canonicalUrl(){
    // Prefer https://jsbg.ca/pay if hosted there, else current location
    const u = new URL(window.location.href);
    if (u.hostname && u.hostname.endsWith('jsbg.ca')) return `https://jsbg.ca${u.pathname}`;
    return window.location.href;
  }

  // Copy to clipboard
  (function(){
    const btn = document.getElementById('copyBtn');
    const out = document.getElementById('copyMsg');
    btn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(EMAIL);
        out.textContent = 'Email address copied. Open your banking app and paste into the Recipient field.';
        out.className = 'muted success';
      } catch(e){
        out.textContent = 'Could not copy automatically. Long‑press the address above to copy.';
        out.className = 'muted error';
      }
    });
  })();

  // Download QR as PNG
  (function(){
    const btn = document.getElementById('downloadQR');
    btn.addEventListener('click', () => {
      const canvas = document.getElementById('qrCanvas');
      const a = document.createElement('a');
      a.href = canvas.toDataURL('image/png');
      a.download = 'jsbg-pay-qr.png';
      a.click();
    });
  })();

  // Admin panel toggle via ?admin=1
  (function(){
    const params = new URLSearchParams(location.search);
    const isAdmin = params.get('admin') === '1';
    if (isAdmin) document.getElementById('adminPanel').classList.remove('hide');
  })();

  // Web NFC writer (Android Chrome only)
  (function(){
    const nfcMsg = document.getElementById('nfcMsg');
    async function writeNdef(records){
      if (!('NDEFReader' in window)) { nfcMsg.textContent = 'Web NFC not supported on this device/browser.'; nfcMsg.className = 'error'; return; }
      try {
        const ndef = new NDEFReader();
        await ndef.write({ records });
        nfcMsg.textContent = 'NFC tag written successfully. Test by tapping your phone on the tag.';
        nfcMsg.className = 'success';
      } catch (err){
        nfcMsg.textContent = 'NFC write failed: ' + (err && err.message ? err.message : err);
        nfcMsg.className = 'error';
      }
    }
    const pageBtn = document.getElementById('nfcWritePage');
    const mailBtn = document.getElementById('nfcWriteMail');
    if (pageBtn) pageBtn.addEventListener('click', ()=> writeNdef([
      { recordType: 'url', data: canonicalUrl() }
    ]));
    if (mailBtn) mailBtn.addEventListener('click', ()=> writeNdef([
      { recordType: 'url', data: `mailto:${EMAIL}?subject=Garage%20Sale%20Payment` }
    ]));
  })();

  // Footer year
  document.getElementById('y').textContent = new Date().getFullYear();
  </script>
