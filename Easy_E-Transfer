    <script>
        // The core reliable function: Copy the email to the clipboard automatically.
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                console.log('Copying to clipboard was successful!');
                const confirmationEl = document.getElementById('confirmationMessage');
                confirmationEl.style.display = 'block';
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
            });
        }

        // Function to determine the user's device and open the correct app link
        function openBankingApp() {
            const userAgent = navigator.userAgent || navigator.vendor || window.opera;

            // Check if iOS
            if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                window.location.href = 'https://apps.apple.com/ca/app/apple-store/id336353151'; // Generic link to App Store search for "banking"
                // For a more specific link, you could use your bank's direct App Store link.
            }
            // Check if Android
            else if (/android/i.test(userAgent)) {
                window.location.href = 'https://play.google.com/store/search?q=banking&c=apps'; // Generic link to Play Store banking apps
            }
            else {
                // If desktop or other, just open a new tab to a general search
                window.open('https://www.google.com/search?q=my+banking+app', '_blank');
            }
        }

        // 1. Define the email address
        const recipientEmail = 'shaun@jsbg.ca';

        // 2. Execute the copy command as soon as the page loads
        window.onload = function() {
            copyToClipboard(recipientEmail);
        };

        // 3. Make the button open the app store link
        const appButton = document.getElementById('appButton');
        appButton.addEventListener('click', function(event) {
            event.preventDefault();
            openBankingApp(); // Call our new function
        });

    </script>

